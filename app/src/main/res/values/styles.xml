<resources>

    <!-- Base application theme. -->
    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/transparent</item>
        <item name="tabIndicatorColor">@color/deep_orange_500</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/deep_orange_500</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="MySearchBarStyle" parent="MaterialSearchBarLight">
        <item name="mt_searchBarColor">@color/transparent</item>
        <item name="mt_navIconTint">@color/white</item>
        <item name="mt_searchIconTint">@color/white</item>
        <item name="mt_clearIconTint">@color/white</item>
        <item name="mt_menuIconTint">@color/white</item>
        <item name="mt_backIconTint">@color/white</item>
        <item name="mt_textColor">@color/white</item>
        <item name="mt_hintColor">@color/white</item>
        <item name="mt_placeholderColor">@color/white</item>
        <item name="mt_highlightedTextColor">@color/white</item>
    </style>

    <style name="AppThemeMain.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LaunchTheme" parent="AppThemeMain">
        <item name="android:windowBackground">#1572fc</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeMain.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeMain.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

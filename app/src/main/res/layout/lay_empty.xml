<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:maxHeight="@dimen/len_100"
        android:maxWidth="@dimen/len_100"
        android:minHeight="@dimen/len_48"
        android:minWidth="@dimen/len_48"
        android:scaleType="centerInside"
        android:src="@drawable/status_empty"
        android:tint="@color/textSecond" />


    <TextView
        android:id="@+id/txt_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/len_16"
        android:layout_marginTop="@dimen/len_16"
        android:text="oh! 还没有相关数据~"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textSecond" />
</LinearLayout>